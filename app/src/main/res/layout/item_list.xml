<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivListImage"
            android:layout_width="100dp"
            android:layout_height="110dp" />

        <TextView
            android:id="@+id/tvListTitle"
            style="@style/List.Title"
            android:layout_toEndOf="@+id/ivListImage"
            android:text="@string/item_list_title" />

        <TextView
            android:id="@+id/tvListDescription"
            style="@style/List.Description"
            android:layout_below="@+id/tvListTitle"
            android:layout_toEndOf="@+id/ivListImage"
            android:text="@string/item_list_description" />

        <TextView
            android:id="@+id/tvListCountry"
            style="@style/List.Country"
            android:layout_toEndOf="@+id/ivListImage"
            android:layout_below="@+id/tvListDescription"
            android:text="@string/item_list_country" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>